// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String
  name         String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  subscription  Subscription?
  connections   Connection[]
  transactions  Transaction[]
  reports       Report[]
  chatMessages  ChatMessage[]
}

model Subscription {
  id                    String    @id @default(cuid())
  userId                String    @unique
  paddleCustomerId      String?   @unique
  paddleSubscriptionId  String?   @unique
  paddlePriceId         String?
  status                String    // trialing, active, canceled, past_due, paused
  currentPeriodEnd      DateTime?
  cancelAt              DateTime?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Connection {
  id           String    @id @default(cuid())
  userId       String
  source       String    // wave, stripe, xero, square, airtable, notion
  accessToken  String    @db.Text
  refreshToken String?   @db.Text
  expiresAt    DateTime?
  metadata     Json?     // Store source-specific data
  lastSyncAt   DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, source])
}

model Transaction {
  id          String   @id @default(cuid())
  userId      String
  source      String   // which integration
  externalId  String   // ID from external system
  date        DateTime
  description String
  amount      Decimal  @db.Decimal(12, 2)
  category    String?
  type        String   // income, expense, transfer
  metadata    Json?    // Store source-specific fields
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
  @@unique([userId, source, externalId])
}

model Report {
  id         String   @id @default(cuid())
  userId     String
  reportType String   // pl_statement, cash_flow, etc.
  startDate  DateTime
  endDate    DateTime
  status     String   // generating, completed, failed
  pdfUrl     String?
  metadata   Json?
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

model ChatMessage {
  id        String   @id @default(cuid())
  userId    String
  role      String   // user, assistant
  content   String   @db.Text
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}
